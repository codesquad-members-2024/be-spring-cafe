<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %clr(%5p) ${PID:- } --- %magenta([%t]) %blue(%-40.40logger{39}) : %m%n%ex</pattern>
        </encoder>
    </appender>
    <!--    작성 패키지만의 level을 따로 설정-->
    <logger name="codesquad.springcafe" level="DEBUG"/>
    <!--    기본 level설정-->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>